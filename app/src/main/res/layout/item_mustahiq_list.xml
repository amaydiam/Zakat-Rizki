<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_parent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/recycler_view_padding"
    android:clickable="true"
    cardview:cardBackgroundColor="@color/white"
    cardview:cardPreventCornerOverlap="false"
    cardview:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="4dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/credit_item_padding"
            android:paddingLeft="@dimen/dist_large"
            android:paddingRight="@dimen/dist_large"
            android:paddingTop="@dimen/credit_item_padding">

            <agency.tango.android.avatarview.views.AvatarView
                android:id="@+id/foto_profil"
                android:layout_width="@dimen/foto_profil_size"
                android:layout_height="@dimen/foto_profil_size"
                app:av_border_color="@android:color/white"
                app:av_border_width="4dp"
                app:av_text_size_percentage="35"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dist_large"
                android:layout_marginStart="@dimen/dist_large"
                android:orientation="vertical">

                <com.ad.zakatrizki.widget.RobotoBoldTextView
                    android:id="@+id/nama_calon_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"

                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    tools:text="nama_calon_mustahiq" />

                <com.ad.zakatrizki.widget.RobotoLightTextView
                    android:id="@+id/alamat_calon_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"

                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    tools:text="alamat_calon_mustahiq" />
                <com.ad.zakatrizki.widget.RobotoLightTextView
                    android:id="@+id/no_identitas_calon_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"

                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    tools:text="no_identitas_calon_mustahiq" />
                <com.ad.zakatrizki.widget.RobotoLightTextView
                    android:id="@+id/no_telp_calon_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"

                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    tools:text="no_telp_calon_mustahiq" />
                <com.ad.zakatrizki.widget.RobotoLightTextView
                    android:id="@+id/status_tempat_tinggal_calon_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"

                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    tools:text="status_tempat_tinggal_calon_mustahiq" />

                <com.ad.zakatrizki.widget.RobotoLightTextView
                    android:id="@+id/jumlah_anak_calon_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"

                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    tools:text="jumlah_anak_calon_mustahiq" />
                <com.ad.zakatrizki.widget.RobotoLightTextView
                    android:id="@+id/status_pernikahan_calon_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"

                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    tools:text="status_pernikahan_calon_mustahiq" />
                <com.ad.zakatrizki.widget.RobotoLightTextView
                    android:id="@+id/status_pekerjaan_calon_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"

                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    tools:text="status_pekerjaan_calon_mustahiq" />

                <com.ad.zakatrizki.widget.RobotoLightTextView
                    android:id="@+id/nama_perekomendasi_calon_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    tools:text="nama_perekomendasi_calon_mustahiq" />
                <com.ad.zakatrizki.widget.RobotoLightTextView
                    android:id="@+id/alasan_perekomendasi_calon_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    tools:text="alasan_perekomendasi_calon_mustahiq" />

                <com.ad.zakatrizki.widget.RobotoLightTextView
                android:id="@+id/nama_validasi_amil_zakat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"

                android:textColor="@color/text_primary"
                android:textSize="@dimen/text_large"
                tools:text="nama_validasi_amil_zakat" />

                <com.ad.zakatrizki.widget.RobotoLightTextView
                    android:id="@+id/nama_type_validasi_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"

                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    tools:text="nama_type_validasi_mustahiq" />
                <com.ad.zakatrizki.widget.RobotoLightTextView
                    android:id="@+id/status_calon_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"

                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    tools:text="status_calon_mustahiq" />
                <com.ad.zakatrizki.widget.RobotoLightTextView
                    android:id="@+id/status_mustahiq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"

                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    tools:text="status_mustahiq"/>
                <com.ad.zakatrizki.widget.RobotoLightTextView
                    android:id="@+id/waktu_terakhir_donasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    tools:text="waktu_terakhir_donasi" />
                <LinearLayout
                    android:id="@+id/layout_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:orientation="horizontal">
                    <com.ad.zakatrizki.widget.RobotoLightTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_large"
                    android:text="Rating : " />

                    <android.support.v7.widget.AppCompatRatingBar
                        android:id="@+id/rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stepSize="1"
                        android:isIndicator="true"
                        style="?android:attr/ratingBarStyleSmall"/>
                        </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center"
                        android:orientation="horizontal">
                    <com.ad.zakatrizki.widget.RobotoLightTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_large"
                        android:text="Rating Amil Zakat: " />

                    <android.support.v7.widget.AppCompatRatingBar
                        android:id="@+id/rating_amil_zakat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:stepSize="1"
                        android:isIndicator="true"
                        style="?android:attr/ratingBarStyleSmall"/>
                        </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    <com.joanzapata.iconify.widget.IconButton
        android:id="@+id/btn_action"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@null"
        android:text="{mdi-menu-down}"
        android:textColor="@color/primary"
        android:textSize="30sp"
        android:textStyle="bold" />
</LinearLayout>

</android.support.v7.widget.CardView>
